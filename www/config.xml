<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          = "com.genuitec.qrconferencebuddy"
        version     = "1.0"
        versionCode = "1" >

    <!-- versionCode is optional and Android only -->

    <preference name="phonegap-version" value="3.4.0" />
    <preference name="target-device" value="handset" />

    <name>QR Conference Buddy</name>

    <description>QR Conference Mobile application for tracking conference attendees that you speak to at an exhibition booth, when conference attendees have QR codes on their conference badges. Built using PhoneGap, HTML5, jQuery Mobile, and SQLite.</description>

    <author href="https://www.genuitec.com" email="info@genuitec.com">Genuitec, LLC</author>
        
    <gap:plugin name="com.phonegap.plugins.barcodescanner"/>
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.core.dialogs" />

    <gap:config-file platform="android" parent="/manifest">
	<application android:debuggable="true" />
    </gap:config-file>

    <!-- Application Icons -->

    <icon src="icons/appicon.png" />

    <icon src="icons/ios/appicon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons/ios/appicon@2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="icons/ios/appicon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icons/ios/appicon-60@2x.png" gap:platform="ios" width="120" height="120" />
    <icon src="icons/ios/appicon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/ios/appicon-72@2x.png" gap:platform="ios" width="144" height="144" />
    <icon src="icons/ios/appicon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icons/ios/appicon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <icon src="icons/android/drawable-ldpi/appicon.png" gap:platform="android" gap:density="ldpi" />
    <icon src="icons/android/drawable-mdpi/appicon.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icons/android/drawable-hdpi/appicon.png" gap:platform="android" gap:density="hdpi" />
    <icon src="icons/android/drawable-xhdpi/appicon.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="icons/android/drawable-xxhdpi/appicon.png" gap:platform="android" gap:density="xxhdpi" />

    <!-- Splash Images -->

    
    <gap:splash src="splash.png" />
    
    <gap:splash src="splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="splash/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />
    
    <gap:splash src="splash/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />
    
    <gap:splash src="splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="748" />
    <gap:splash src="splash/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="splash/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />
        
    <gap:splash src="splash/android/res-notlong-port-ldpi/default.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="splash/android/res-notlong-port-mdpi/default.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="splash/android/res-notlong-port-hdpi/default.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="splash/android/res-notlong-port-xhdpi/default.png" gap:platform="android" gap:density="xhdpi" />
        
    <access origin="*" subdomains="true" />
        
</widget>
